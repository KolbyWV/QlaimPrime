generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model User {
  id           String   @id @default(cuid())
  email        String   @unique
  passwordHash String
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  profile       Profile?
  refreshTokens RefreshToken[]
  passwordResetTokens PasswordResetToken[]
  companies     Member[]
  createdGigs   Gig[]           @relation("GigCreatedBy")
  assignments   GigAssignment[] @relation("GigAssignee")
}

model RefreshToken {
  id          String   @id @default(cuid())
  userId      String
  user        User     @relation(fields: [userId], references: [id])

  tokenHash   String   @unique
  createdAt   DateTime @default(now())
  expiresAt   DateTime
  revokedAt   DateTime?
  replacedByTokenId String?

  userAgent   String?
  ipAddress   String?

  @@index([userId])
  @@index([expiresAt])
}

model PasswordResetToken {
  id        String   @id @default(cuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id])

  tokenHash String   @unique
  createdAt DateTime @default(now())
  expiresAt DateTime
  usedAt    DateTime?

  @@index([userId])
  @@index([expiresAt])
}


model Profile {
  id            String   @id @default(cuid())
  userId        String   @unique
  user          User     @relation(fields: [userId], references: [id])

  firstName     String
  lastName      String
  username      String   @unique
  zipcode       String   // store as String, zipcodes can have leading zeros
  avatarUrl     String?

  tier          MembershipTier @default(COPPER)
  starsBalance  Int      @default(0)

  ratingAvg     Float    @default(5.0)
  ratingCount   Int      @default(0)

  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  starsTransactions StarsTransaction[]
  moneyTransactions MoneyTransaction[]
  purchases Purchase[]
  //watchlists    Watchlist[]
  //assignments   GigAssignment[]
}

model Company {
  id        String   @id @default(cuid())
  name      String   @unique
  logoUrl   String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  members   Member[]
  gigs      Gig[]
}

model Location {
  id      String @id @default(cuid())
  name    String
  address String
  city    String
  state   String
  zipcode String
  lat     Float?
  lng     Float?

  gigs Gig[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Member {
  id        String   @id @default(cuid())
  companyId String
  userId    String

  company   Company @relation(fields: [companyId], references: [id])
  user      User    @relation(fields: [userId], references: [id])
  reviews   GigReview[]

  role      CompanyRole

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([companyId, userId])
  @@index([userId])
  @@index([companyId])
}

model Gig {
  id              String    @id @default(cuid())
  companyId       String
  createdByUserId String

  title       String
  description String?
  type        GigType @default(STANDARD)
  locationId  String?
  startsAt    DateTime?
  endsAt      DateTime?
  payCents    Int?
  units             Int?
  basePriceCents    Int @default(0)
  currentPriceCents Int @default(0)
  bonusStars        Int @default(0)
  requiredTier      MembershipTier?
  repostCount       Int @default(0)
  escalationCount   Int @default(0)
  lastEscalatedAt   DateTime?
  status      GigStatus @default(DRAFT)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  company   Company         @relation(fields: [companyId], references: [id])
  createdBy User            @relation("GigCreatedBy", fields: [createdByUserId], references: [id])
  location  Location?       @relation(fields: [locationId], references: [id])
  assignments GigAssignment[]
  starsTransactions StarsTransaction[]
  moneyTransactions MoneyTransaction[]

  @@index([companyId, status])
  @@index([createdByUserId])
  @@index([locationId])
}

model GigAssignment {
  id     String @id @default(cuid())
  gigId  String
  userId String

  status AssignmentStatus @default(CLAIMED)
  note   String?
  notes  String?
  startImageUrl String?
  endImageUrl   String?

  assignedAt  DateTime  @default(now())
  claimedAt   DateTime  @default(now())
  startedAt   DateTime?
  submittedAt DateTime?
  reviewedAt  DateTime?
  acceptedAt  DateTime?
  completedAt DateTime?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  gig  Gig  @relation(fields: [gigId], references: [id])
  user User @relation("GigAssignee", fields: [userId], references: [id])
  review GigReview?
  starsTransactions StarsTransaction[]
  moneyTransactions MoneyTransaction[]
  purchases Purchase[]

  @@unique([gigId, userId])
  @@index([gigId])
  @@index([userId])
}

model Product {
  id              String @id @default(cuid())
  category        ProductCategory
  tier            MembershipTier?
  title           String
  subtitle        String?
  starsCost       Int
  durationSeconds Int?
  effectPct       Int?

  createdAt DateTime @default(now())
  purchases Purchase[]
}

model Purchase {
  id                  String @id @default(cuid())
  contractorId            String
  productId           String
  status              PurchaseStatus @default(ACTIVE)
  expiresAt           DateTime?
  consumedAt          DateTime?
  appliedToAssignmentId String?

  contractor   Profile       @relation(fields: [contractorId], references: [id])
  product  Product       @relation(fields: [productId], references: [id])
  assignment GigAssignment? @relation(fields: [appliedToAssignmentId], references: [id])
  starsTransactions StarsTransaction[]

  createdAt DateTime @default(now())

  @@index([contractorId])
  @@index([productId])
  @@index([appliedToAssignmentId])
}

model GigReview {
  id               String @id @default(cuid())
  assignmentId     String @unique
  reviewerMemberId String

  assignment     GigAssignment @relation(fields: [assignmentId], references: [id])
  reviewerMember Member        @relation(fields: [reviewerMemberId], references: [id])

  starsRating Int
  comment     String?
  decision    ReviewDecision

  createdAt DateTime @default(now())
}

model StarsTransaction {
  id           String @id @default(cuid())
  contractorId     String
  delta        Int
  reason       StarsReason
  gigId        String?
  assignmentId String?
  purchaseId   String?

  contractor     Profile        @relation(fields: [contractorId], references: [id])
  gig        Gig?           @relation(fields: [gigId], references: [id])
  assignment GigAssignment? @relation(fields: [assignmentId], references: [id])
  purchase   Purchase?      @relation(fields: [purchaseId], references: [id])

  createdAt DateTime @default(now())

  @@index([contractorId])
  @@index([gigId])
  @@index([assignmentId])
  @@index([purchaseId])
}

model MoneyTransaction {
  id           String @id @default(cuid())
  contractorId     String
  amountCents  Int
  reason       MoneyReason
  gigId        String?
  assignmentId String?

  contractor     Profile        @relation(fields: [contractorId], references: [id])
  gig        Gig?           @relation(fields: [gigId], references: [id])
  assignment GigAssignment? @relation(fields: [assignmentId], references: [id])

  createdAt DateTime @default(now())

  @@index([contractorId])
  @@index([gigId])
  @@index([assignmentId])
}

enum CompanyRole {
  CREATOR      // can create/edit gigs
  APPROVER     // can approve/reject
  MANAGER      // can do both
  OWNER        // everything + billing
}

enum MembershipTier {
  COPPER
  BRONZE
  SILVER
  GOLD
  PLATINUM
  DIAMOND
}

enum GigStatus {
  DRAFT
  OPEN
  CLAIMED
  IN_PROGRESS
  COMPLETED
  CANCELLED
}

enum AssignmentStatus {
  CLAIMED
  ACCEPTED
  DECLINED
  STARTED
  SUBMITTED
  REVIEWED
  COMPLETED
  CANCELLED
}

enum GigType {
  STANDARD
  DELIVERY
  AUDIT
}

enum ReviewDecision {
  APPROVED
  REJECTED
}

enum StarsReason {
  EARNED_FROM_REVIEW
  SPENT_ON_PRODUCT
  ADJUSTMENT
}

enum MoneyReason {
  PAYOUT
  ADJUSTMENT
}

enum PurchaseStatus {
  ACTIVE
  EXPIRED
  CONSUMED
}

enum ProductCategory {
  MEMBERSHIP_UPGRADE
  PAY_BONUS
}
